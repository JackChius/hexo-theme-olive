
section
  display: -webkit-box
  display: -ms-flexbox
  display: flex
  -webkit-box-flex: 1
  -ms-flex: 1
  flex: 1
  width:80%
  margin-left:10%
  margin-right:10%


.left
  margin-top:1.5rem
  background-color: #f0f1f1
  width: 15rem

.right
  margin-top:1.5rem
  width: 20rem
  .social 
    background-color: #fff
    border-radius: 2px
    margin-bottom: 1.5rem
    overflow: hidden
    box-shadow: 0 1px 2px 0 rgba(0,0,0,.05)
    .slogan
       font-size: 1.2rem
       color: #333
       line-height: 1.6rem
       margin-bottom: 1.3rem
.main
  margin-top: 1.5rem
  width: 100%
  height: 100%
  background-color: #ffffff

li
  list-style: none


.list-box
  background-color: #fff
  border-radius: 2px
  margin-bottom: 1.5rem
  text-align: center
  background-color: #fff
  border-radius: 2px
  width:100%

.shadow
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05)


.article-box
  display:-webkit-box
  display:-ms-flexbox
  display:flex
  -webkit-box-orient: horizontal
  height:72px
  a
    color:#333
    text-decoration: none
  &:hover
    color:#909090
    background-color: hsla(0,0%,56%,.1)
  
  
.box-image
  background-image: url(https://dn-mhke0kuv.qbox.me/2f5909e41505fde640dc.jpg?imageView2/1/w/120/h/120/q/85/format/jpg/interlace/1)
  background-size: cover
  background-position: 50%;
  background-repeat: no-repeat;
  -webkit-box-flex: 0
  -ms-flex: 0 0 auto
  flex: 0 0 auto
  width: 60px
  height: 60px
  margin: 5px 5px 5px 5px
.box-right
  display:flex;
  flex-direction: column
  .title    
    font-size: 1.3rem
    line-height: 2rem
    font-weight: 600
    margin-bottom: .5rem
    color:#333
    flex:1
  .info    
    color: #909090;


.article-item
  background-color: hsla(0,0%,87%,.2)
  font-weight: 700
  font-size: 1.3rem
  border-radius: 2px
  height:72px
    color:#909090
    text-decoration: none
  &:hover
    color: #007fff

.nav-item
  background-color: #f0f1f1
  font-weight: 100
  font-size: 2rem
  border-radius: 2px
  height:72px
  box-sizing:border-box
  width:180px
  &:active
    background-color: hsla(0,0%,87%,.2)
  &:hover
    background-color: hsla(0,0%,87%,.2)
  a
    color:#909090
    text-decoration: none
    &:hover
      color: #4b82ff



